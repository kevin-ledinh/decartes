<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
  <script src="/utils/utils.js"></script>
  <link rel="stylesheet" href="/css/style.css" type="text/css" >

  <title>MY APP</title>
</head>
<body>
  <h1> Search products. </h1>
  <form action="/search" method="POST">
    <input type="text" placeholder="search ..." name="searchTerm">
    <input type="hidden" name="isMobile" id="isMobile">
    <button type="submit" onclick="mobileCheck()">Search</button>
    <input type="checkbox" id="excludeFlag" name="excludeFlag" value="on">
  </form>
  <br/>
  <div class="search">
    <!-- Loop through quotes -->
    <table class="greyGridTable">
      <thead>
      <tr>
      <th>Store</th>
      <th colspan="2">Name</th>
      </tr>
      </thead>
      <tbody>

      <% for(var i = 0; i < search.length; i++) {%>
          <tr> 
            <td><%= search[i].store_name %></td>
            <td style="text-align: left;">
              <a href=<%= search[i].product_link %> target="_blank" rel="noopener noreferrer"><%= search[i].product_name %></a><br/><br/>
              <strong>Price: </strong><%= search[i].product_price %> - <del><%= search[i].was_price %></del><br/>
              <strong>Offer: </strong><%= search[i].product_offer %><br/>
              <strong>Unit Price: </strong><%= search[i].weightUnitprice %>
            </td>
            <td><img src=<%= search[i].product_img %> style="max-width:80%;"></td>
          </tr>
      <% } %>
    </tbody>
    </table>
    </div>
</body>
</html>